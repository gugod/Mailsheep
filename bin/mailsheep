#!/usr/bin/env perl
use v5.12;
use strict;
use FindBin;
use lib "${FindBin::Bin}/../lib";

sub camelcase {
    my $n = lc($_[0]);
    $n =~ s/(\A|[\-_])(\w)/uc($2)/eg;
    return $n;
}

my $command = "help";

if (@ARGV > 0) {
    $command = shift(@ARGV);
}

my $cmd_class = "Mailsheep::Cmd::" . ( camelcase($command) );
eval "require $cmd_class;" or do {
    die "Unknown command: $command\n";
};

my @param;
for (@ARGV) {
    if (/\A--(?<optname>.+)\z/) {
        my $n = lc($+{optname});
        $n =~ s{-}{_}g;
        push @param, $n;
    } else {
        push @param, $_;
    }
}

$cmd_class->new(@param)->execute();

