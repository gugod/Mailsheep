#!/usr/bin/env perl
use v5.18;
use warnings;

local $SIG{__WARN__} = sub {
    my $warn_text = shift;
    return if $warn_text =~ /\A(given|when) is experimental/;
    warn($warn_text);
};

use FindBin;
use lib "${FindBin::Bin}/../lib";

use Mailsheep::App;

binmode STDOUT, ":utf8";

Mailsheep::App->new->run;
