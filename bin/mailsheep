#!/usr/bin/env perl
use v5.18;
use FindBin;
use lib "${FindBin::Bin}/../lib";

use Getopt::Std;
use Mailsheep::App;

my %opts;
getopts('na', \%opts);
my $cmd = shift(@ARGV);
$cmd =~ tr/-/_/;

my $app = Mailsheep::App->new(config_dir => "$ENV{HOME}/.config/mailsheep");

$opts{'dry-run'} = $opts{n};
$opts{all} = $opts{a};

$app->$cmd(\%opts);
