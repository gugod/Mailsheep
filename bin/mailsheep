#!/usr/bin/env perl
use v5.18;
use FindBin;
use lib "${FindBin::Bin}/../lib";

use File::XDG;

use Getopt::Std;
use Mailsheep::App;

my $xdg = File::XDG->new( name => "mailsheep" );

my $app = Mailsheep::App->new(
    config_dir => $xdg->config_home,
    cache_dir  => $xdg->cache_home,
    data_dir   => $xdg->data_home,
    args       => \@ARGV,
);
$app->run();
